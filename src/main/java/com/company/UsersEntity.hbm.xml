<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.company.UsersEntity" table="users" schema="projectdraftdb">
        <id name="username">
            <column name="username" sql-type="varchar(55)" length="55"/>
        </id>
        <property name="firstName">
            <column name="firstName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="lastName">
            <column name="lastName" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="creditBalance">
            <column name="creditBalance" sql-type="int(10) unsigned"/>
        </property>
        <property name="creditPending">
            <column name="creditPending" sql-type="int(10) unsigned"/>
        </property>
        <property name="emailAddress">
            <column name="emailAddress" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>